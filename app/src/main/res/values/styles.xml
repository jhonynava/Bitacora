<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Error" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="etiqueta_fab">
        <item name="android:background">@drawable/fondo_etiqueta_fab</item>
        <item name="android:textColor">@color/blanco</item>
    </style>

    <style name="ThemeRecorrido" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#00685b</item>
        <item name="colorPrimaryDark">#003d32</item>
        <item name="colorAccent">#003d32</item>
    </style>

    <style name="ThemeRecarga_combustible" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#ff6f00</item>4E2A38
        <item name="colorPrimaryDark">#c43e00</item>
        <item name="colorAccent">#c43e00</item>
    </style>

    <style name="ThemeRutas" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#2979ff</item>
        <item name="colorPrimaryDark">#004ecb</item>
        <item name="colorAccent">#004ecb</item>
    </style>
</resources>
