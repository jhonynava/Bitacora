<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="160dp"
    android:layout_height="210dp"
    card_view:cardCornerRadius="12dp"
    android:clickable="true"
    card_view:cardElevation="8dp"
    card_view:contentPadding="6dp"
    android:id="@+id/cardview_automoviles"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_cardview"
            android:src="@drawable/chevrolet_captiva_sport_2013_blanco"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Eco: "
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/texto_noEconomico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="301"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disp: "
                    android:textColor="#000"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/texto_disponibilidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SI"
                    android:textStyle="bold"
                    android:textColor="#04590f"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Placas:"
                    android:textColor="#000"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/texto_placas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2154654" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>